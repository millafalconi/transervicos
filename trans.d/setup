#!/usr/bin/env bash
# vim: ft=sh

SUBCOMMAND_DESC="Verifique o setup do projeto"
SUBCOMMAND_HELP=$(cat <<EOH
Usage ${MAIN_COMMAND} ${SUBCOMMAND} [check] [install]

check Verifica se todas as dependências estão instaladas.
install TODO!

EOH
)

function msg_installed() {
  in_green "OK: "${1}" instalado"
}

function msg_not_installed() {
  in_red "NOK: "${1}" é necessário. "${1}" não está instalado"
}

function check_if_plugin_installed() {
  if [[ $(${1} plugin list | grep "${2}") = *${2}* ]]; then
    msg_installed ${2}
    return
  fi
  msg_not_installed ${2}
}

function check_if_installed() {
  if [ -x "$(command -v ${1})" ]; then
    msg_installed ${1}
    return
  fi
  msg_not_installed ${1}
}

function check_version() {
  min=1.9
  current=$(${1} --version | head -n 1 | awk '{print $NF}' | cut -c 1-3)

  if [ 1 -eq `echo "${current} < ${min}" | bc` ]; then
    in_red "NOK: a versão do ansible é menor que ${min}. atualize o ansible."
    return
  fi
  in_green "OK: a versão do ansible é maior que ${min}"
}

function check_setup() {
  check_if_installed "ansible"
  check_version "ansible"
  check_if_installed "vagrant"
  check_if_plugin_installed "vagrant" "vagrant-cachier"
  check_if_installed "virtualbox"
}

function install_dependencies() {
  echo "install all was called"
}

is_help_mode "${@}" && return

case ${1} in
  check)
    check_setup
    ;;
  install)
    install_dependencies
  ;;
esac
